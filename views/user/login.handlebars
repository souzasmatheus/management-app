<div class="row justify-content-center">

    <div class="col-12 text-center mb-2">
        <h1>Bem vindo(a)!</h1>
    </div>
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header bg-dark">
                <p class="text-uppercase text-center m-0 text-light h5">Login</p>
            </div>
            <div class="card-body">
                <form method="post" action="/user/login">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" name="email" class="form-control" placeholder="Ex.: joao@gmail.com" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Senha</label>
                        <input type="password" name="password" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-success float-right">Entrar</button>
                </form>
            </div>
        </div>
    </div>
</div>