<div class="row justify-content-lg-center">
    <div class="col-lg-8">
        <div class="card border-dark">
            <div class="card-header">
                <p class="text-uppercase text-center m-0 text-dark">Informações gerais</span></p>
            </div>
            <div class="card-body pt-0 pb-0">
                <div class="table-responsive">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th class="border-top-0" scope="row">Nome:</th>
                                <td class="border-top-0">{{client.name}}</td>
                            </tr>
                            <tr>
                                <th scope="row">Documento:</th> <td>{{client.document}}</td>
                            </tr>
                            <tr>
                                <th scope="row">Idade:</th>
                                <td>{{getAge client.birthday}}</td>
                            </tr>
                            <tr>
                                <th scope="row">Sexo:</th>
                                <td>{{client.sex}}</td>
                            </tr>
                            <tr>
                                <th scope="row">Endereço:</th>
                                <td>{{client.address}}, {{client.city}}, {{client.state}}</td>
                            </tr>
                            <tr>
                                <th scope="row">Telefone:</th>
                                <td>{{client.number}}</td>
                            </tr>
                            <tr>
                                <th scope="row">E-mail:</th>
                                <td>{{client.email}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>